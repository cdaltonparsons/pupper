<div class="container">
    <div class="row">
        <div class="col-12">
        <!-- Modal -->
            <div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="title" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                    <h4 class="modal-title" id="title">Your Compatible Friend Match Is:</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    </div>
                    <div class="modal-body mx-auto">
                        <h5 id="match-message"></h5>
                        <img id="match-photo" src="#" alt="Your Match Photo" class="img-thumbnail">
                    </div>
